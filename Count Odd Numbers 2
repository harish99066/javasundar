import java.util.Scanner;
public class Solution {
    public static void main(String[] args) {
        Scanner s=new Scanner(System.in);
        int [] a=new int[100];
        int n;
        int d=0;
        n=s.nextInt();
        for(int i=0;i<n;i++){
            a[i]=s.nextInt();
            if(a[i]%2==1){
                d=d+1;}}      
     System.out.print(d);
    }
}
